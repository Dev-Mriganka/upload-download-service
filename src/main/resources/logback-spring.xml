<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
    <!-- Application name from Spring Boot properties -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name" defaultValue="upload-download-service"/>
    <property name="ENV" value="${ENV:-local}"/>

    <!-- Single JSON console appender (ship via stdout) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp>
                    <timeZone>UTC</timeZone>
                </timestamp>
                <logLevel/>
                <loggerName/>
                <threadName/>
                <!-- Include all MDC entries (traceId, spanId, etc.) from Micrometer/Otel -->
                <mdc/>
                <!-- Preserve message as JSON field, escaping newlines -->
                <pattern>
                    <pattern>{"message":"%replace(%msg){'\n','\\n'}"}</pattern>
                </pattern>
                <stackTrace>
                    <throwableConverter class="net.logstash.logback.stacktrace.ShortenedThrowableConverter">
                        <maxDepthPerThrowable>30</maxDepthPerThrowable>
                        <maxLength>2048</maxLength>
                        <shortenedClassNameLength>20</shortenedClassNameLength>
                        <rootCauseFirst>true</rootCauseFirst>
                    </throwableConverter>
                </stackTrace>
                <!-- Common fields for downstream processing -->
                <provider class="net.logstash.logback.composite.loggingevent.GlobalCustomFieldsJsonProvider">
                    <customFields>{"service":"${APP_NAME}","env":"${ENV}","service.namespace":"vaultsearch"}</customFields>
                </provider>
            </providers>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>
